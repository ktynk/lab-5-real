#include <iostream>
using namespace std;
int main()
{

    int b,d;
	int arr[2][2];
	for (int i = 0; i < 2; i++) 
	{
		for (int z = 0; z < 2; z++)
		{
			cout << "vvedite element pod indeksami: " << i << " " << z << endl;
			cin >> arr[i][z];
		}
	}
	for (int i = 0; i < 2; i++) 
	{
		int summa = 0;
		for (int z = 0; z < 2; z++) 
		{
			if (arr[i][z] < 0) {
				z = 2;//=break;
				summa = 0;
			}
			else
			{
				summa += arr[i][z];
			}
		}
		if (summa != 0) {
			cout <<"summa ne otricatelnih: "<< summa << endl;
			
		}
	}

     b =arr[1][1] +arr[0][0];
	 d = arr[0][1]+arr[1][0];
	 if(b<d)
	     cout<<"naimenshi "<<b;
	     else if (b>d)
	     cout<<"naimenshi "<<d;
	     else 
	     cout<<"error";
	 }
